<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengeActivity">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/learning"/>

    <ImageView
        android:id="@+id/button_shiddiq"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/button_shiddiq"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="@id/title_pilihmodul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/button_amanah"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:src="@drawable/button_amanah"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="@id/button_shiddiq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/button_tabligh"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:src="@drawable/button_tabligh"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="@id/button_amanah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/button_fathonah"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:src="@drawable/buttoh_fathonah"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="@id/button_tabligh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/button_backhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_backhome"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="@id/button_fathonah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>